{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Profile{% endblock %}

{% block body %}
<div class="responsive-menu">
    <a href="" class="responsive-menu-close"><i class="ion-android-close"></i></a>
    <nav class="responsive-nav"></nav> <!-- end .responsive-nav -->
</div> <!-- end .responsive-menu -->
<div class="page-title" style="background-image: url('{{ asset('assets') }}/images/background01.jpg');">
    <div class="inner">
        <div class="container">
            <div class="title">User Panel</div> <!-- end .title -->
        </div> <!-- end .container -->
    </div> <!-- end .inner -->
</div> <!-- end .page-title -->

<section class="section white">
    <div class="inner">
        <div class="container">
            <div class="row">
                <div class="col-sm-9">
                    <div class="blog-list">

                        <h1>Edit User Profile Information</h1>

    {{ include('user/_form.html.twig', {'button_label': 'Update'}) }}

                    </div> <!-- end .blog-list -->

                </div> <!-- end .col-sm-9 -->
                <div class="col-sm-3">
                    <div class="sidebar">
                        <div class="widget">
                            <form class="search-form">
                                <input type="search" placeholder="search" />
                                <button type="submit"><i class="fa fa-search"></i></button>
                            </form>
                        </div> <!-- end .widget -->
                        <div class="widget">
                            {{ include('user/usermenu.html.twig') }}

                        </div> <!-- end .widget -->


                    </div> <!-- end .sidebar -->
                </div> <!-- end .col-sm-3 -->
            </div>
        </div> <!-- end .container -->
    </div> <!-- end .inner -->
</section> <!-- end .section -->



{% endblock %}
