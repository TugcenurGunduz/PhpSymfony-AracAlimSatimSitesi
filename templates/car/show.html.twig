{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Profile{% endblock %}

{% block body %}
    <div class="responsive-menu">
        <a href="" class="responsive-menu-close"><i class="ion-android-close"></i></a>
        <nav class="responsive-nav"></nav> <!-- end .responsive-nav -->
    </div> <!-- end .responsive-menu -->
    <div class="page-title" style="background-image: url('{{ asset('assets') }}/images/background01.jpg');">
        <div class="inner">
            <div class="container">
                <div class="title">Blog Page</div> <!-- end .title -->
            </div> <!-- end .container -->
        </div> <!-- end .inner -->
    </div> <!-- end .page-title -->

    <section class="section white">
        <div class="inner">
            <div class="container">
                <div class="row">
                    <div class="col-sm-9">
                        <div class="blog-list">
                            <div class="blog-post">

                                <h1>User Profile Information</h1>
                                <table class="table">
                                    <tbody>
                                    <tr>
                                        <th>Id</th>
                                        <td>{{ car.id }}</td>
                                    </tr>
                                    <tr>
                                        <th>Title</th>
                                        <td>{{ car.title }}</td>
                                    </tr>
                                    <tr>
                                        <th>Keywords</th>
                                        <td>{{ car.keywords }}</td>
                                    </tr>
                                    <tr>
                                        <th>Description</th>
                                        <td>{{ car.description }}</td>
                                    </tr>
                                    <tr>
                                        <th>Image</th>
                                        <td>{{ car.image }}</td>
                                    </tr>
                                    <tr>
                                        <th>Price</th>
                                        <td>{{ car.price }}</td>
                                    </tr>
                                    <tr>
                                        <th>Address</th>
                                        <td>{{ car.address }}</td>
                                    </tr>
                                    <tr>
                                        <th>Phone</th>
                                        <td>{{ car.phone }}</td>
                                    </tr>
                                    <tr>
                                        <th>Fax</th>
                                        <td>{{ car.fax }}</td>
                                    </tr>
                                    <tr>
                                        <th>Email</th>
                                        <td>{{ car.email }}</td>
                                    </tr>
                                    <tr>
                                        <th>City</th>
                                        <td>{{ car.city }}</td>
                                    </tr>
                                    <tr>
                                        <th>Country</th>
                                        <td>{{ car.country }}</td>
                                    </tr>
                                    <tr>
                                        <th>Location</th>
                                        <td>{{ car.location }}</td>
                                    </tr>
                                    <tr>
                                        <th>Status</th>
                                        <td>{{ car.status }}</td>
                                    </tr>
                                    <tr>
                                        <th>Created_at</th>
                                        <td>{{ car.createdAt ? car.createdAt|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Updated_at</th>
                                        <td>{{ car.updatedAt ? car.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
                                    </tr>
                                    <tr>
                                        <th>Detail</th>
                                        <td>{{ car.detail }}</td>
                                    </tr>
                                    <tr>
                                        <th>Userid</th>
                                        <td>{{ car.userid }}</td>
                                    </tr>
                                    </tbody>
                                </table>

                                <a href="{{ path('user_car_index') }}" >Back to list</a>
                                <br>
                                <a href="{{ path('user_car_edit', {'id': car.id}) }}" >Edit</a>
                                <br>
                                <a href="{{ path('user_edit', {'id': app.user.id}) }}">Edit Profile</a>
                                {{ include('car/_delete_form.html.twig') }}



                            </div> <!-- end .blog-post -->

                        </div> <!-- end .blog-list -->

                    </div> <!-- end .col-sm-9 -->
                    <div class="col-sm-3">
                        <div class="sidebar">
                            <div class="widget">
                                <form class="search-form">
                                    <input type="search" placeholder="search" />
                                    <button type="submit"><i class="fa fa-search"></i></button>
                                </form>
                            </div> <!-- end .widget -->
                            <div class="widget">
                                {{ include('user/usermenu.html.twig') }}

                            </div> <!-- end .widget -->

                        </div> <!-- end .sidebar -->
                    </div> <!-- end .col-sm-3 -->
                </div>
            </div> <!-- end .container -->
        </div> <!-- end .inner -->
    </section> <!-- end .section -->




{% endblock %}
