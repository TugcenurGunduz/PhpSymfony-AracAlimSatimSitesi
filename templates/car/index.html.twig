{% extends 'homebase.html.twig' %}

{% block title %}{{ app.user.name }} Profile{% endblock %}

{% block body %}
    <SCRIPT language="JavaScript" type="text/javascript" >
        function openWin( windowURL, windowName, windowFeatures) { window.open(windowURL,windowName,windowFeatures);

        }
    </SCRIPT>
    <div class="responsive-menu">
        <a href="" class="responsive-menu-close"><i class="ion-android-close"></i></a>
        <nav class="responsive-nav"></nav> <!-- end .responsive-nav -->
    </div> <!-- end .responsive-menu -->
    <div class="page-title" style="background-image: url('{{ asset('assets') }}/images/background01.jpg');">
        <div class="inner">
            <div class="container">
                <div class="title">Blog Page</div> <!-- end .title -->
            </div> <!-- end .container -->
        </div> <!-- end .inner -->
    </div> <!-- end .page-title -->

    <section class="section white">
        <div class="inner">
            <div class="container">
                <div class="row">
                    <div class="col-sm-9">
                        <div class="blog-list">
                            <div class="blog-post">
                                <h4 class="title"><a href="blog-post.html">User Car List</a></h4>

                                <table class="table table-responsive">
                                    <thead>
                                    <tr>
                                        <th>Id</th>
                                        <th>Title</th>

                                        <th>Image</th>
                                        <th>I.Gallery</th>
                                        <th>Price</th>
                                        <th>City</th>
                                        <th>Country</th>
                                        <th>Status</th>
                                    </tr>
                                    </thead>
                                    <tbody>
                                    {% for car in cars %}
                                        <tr>
                                            <td>{{ car.id }}</td>
                                            <td>{{ car.title }}</td>

                                            <td><a href="{{  path('user_car_edit', {'id': car.id}) }}">

                                                    {% if car.image==null %}
                                                        add image
                                                    {% else %}
                                                        <img src="{{ asset('upload/images/')}}{{ car.image }}" heigth='40px' width="40px">

                                                    {% endif %}
                                                </a></td>
                                            <td>
                                                <a href="javascript:openWin('{{  path('user_image_new', {'id': car.id}) }}','','toolbar=no,location=no,directories=0,status=no,top=50,left=100,menuBar=no,scrollBars=yes,resizable=no,width=900,height=600');">
                                                    <img src="{{ asset('assets/admin/img') }}/gallery.jpg" height="30">
                                                </a>
                                            </td>

                                            <td>{{ car.price }}</td>
                                            <td>{{ car.city }}</td>
                                            <td>{{ car.country }}</td>
                                            <td>{{ car.status }}</td>
                                            <td>
                                                <a href="{{  path('user_car_show', {'id': car.id}) }}" class="btn btn-block btn-info" style="background: #75438a">show</a>
                                            </td>
                                            <td>
                                                <a href="{{  path('user_car_edit', {'id': car.id}) }}" class="btn btn-block btn-success" style="background: #1d8356">edit</a>
                                            </td>
                                            <td>
                                                {{ include('/car/_delete_form.html.twig') }}
                                            </td>

                                        </tr>
                                    {% else %}
                                        <tr>
                                            <td colspan="17">no records found</td>
                                        </tr>
                                    {% endfor %}
                                    </tbody>
                                </table>
                                <div class="col-md-2">
                                    <a href="{{ path('user_car_new') }}" class="btn btn-block btn-success" style="background: #0b93e1">Create new</a>
                                </div>
                            </div> <!-- end .blog-post -->

                        </div> <!-- end .blog-list -->

                    </div> <!-- end .col-sm-9 -->
                    <div class="col-sm-3">
                        <div class="sidebar">
                            <div class="widget">
                                <form class="search-form">
                                    <input type="search" placeholder="search" />
                                    <button type="submit"><i class="fa fa-search"></i></button>
                                </form>
                            </div> <!-- end .widget -->
                            <div class="widget">
                                {{ include('user/usermenu.html.twig') }}

                            </div> <!-- end .widget -->

                        </div> <!-- end .sidebar -->
                    </div> <!-- end .col-sm-3 -->
                </div>
            </div> <!-- end .container -->
        </div> <!-- end .inner -->
    </section> <!-- end .section -->


{% endblock %}